<% if @item.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@item.errors.count, "error") %>
		</div>		

		<ul>
			<%= @item.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@item) do |f| %>
			<%= f.label :Title %>
			<br>
			<%= f.text_field :title %>
			<br>
			<br>

			<%= f.label :Price %>
			<br>
			<%= f.number_field :price %>
			<br>
			<br>

			<%= f.label :Summary %>
			<br>
			<%= f.text_area :summary %>
			<br>
			<br>

			<%= f.label :Avatar_Url %>
			<br>
			<%= f.text_field :avatar_url %>
			<br>
			<br>

			<%= f.submit "Update item", class: "btn btn-primary" %>
			<%= link_to 'Delete', @item, method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-primary"%>
			<%= link_to  'Cancel', items_path, class: "btn btn-primary" %>
		<% end %>
	</div>
</div>