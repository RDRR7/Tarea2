<div class="container">          
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td><%= link_to item.id, item %></td>
					<td><%= item.title %></td>
					<td>$<%= item.price %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to 'New item', new_item_path %>
</div>